<% provide :title, @book.name %>
<div class="row">
  <h1><%= @book.name %></h1>
  <div class="col-md-5">
    <% if @book.image.url %>
      <%= image_tag(@book.image) %>
    <% else %>
      <%= image_tag Settings.default_image, size: Settings.book_size.size %>
    <% end %>
  </div>
</div>
<ul>
  <li><%= @book.author.name %></li>
  <li><%= @book.publisher.name %></li>
  <li><%= @book.category.name %></li>
</ul>

<% provide :title, @book.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= @book.name %></h1>
      <span class="content">
        <%= image_tag @book.image.url if @book.image? %>
      </span>
      <ul>
        <li><%= @book.author.name %></li>
        <li><%= @book.publisher.name %></li>
        <li><%= @book.category.name %></li>
      </ul>
    </section>
  </aside>
</div>

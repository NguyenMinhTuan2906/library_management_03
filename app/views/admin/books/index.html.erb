<% provide :title, t(".all_book") %>
<h1><%= t ".all_book" %> </h1>

<%= will_paginate %>

<table class="table">
  <thead>
    <tr>
      <th><%= t "name" %></th>
      <th><%= t "category" %></th>
      <th><%= t "author" %></th>
      <th><%= t ".publisher" %></th>
      <th><%= t "status" %></th>
      <th><%= t "action" %></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.category_name %></td>
        <td><%= book.author_name %></td>
        <td><%= book.publisher_name %></td>
        <td>
          <%= link_to t(".edit"), "#" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% provide :title, t(".all_book") %>
<h1><%= t ".all_book" %> </h1>

<%= will_paginate %>

<table class="table">
  <thead>
    <tr>
      <th><%= t "name" %></th>
      <th><%= t "category" %></th>
      <th><%= t "author" %></th>
      <th><%= t ".publisher" %></th>
      <th><%= t "status" %></th>
      <th><%= t "action" %></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.name, admin_book_path(book) %></td>
        <td><%= book.category.name %></td>
        <td><%= book.author.name %></td>
        <td><%= book.publisher.name %></td>
        <td></td>
        <td>
          <%= link_to t("edit"), edit_admin_book_path(book) %>
          | <%= link_to t("delete"), admin_book_path(book),
          method: :delete, data:{confirm: t("confirm")} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate %>

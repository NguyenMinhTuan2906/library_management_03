<% provide :title, t(".all_book") %>
<h1><%= t ".all_book" %> </h1>

<%= will_paginate %>

<table class="table">
  <thead>
    <tr>
      <th><%= t "name" %></th>
      <th><%= t "category" %></th>
      <th><%= t "author" %></th>
      <th><%= t "status" %></th>
      <th><%= t "action" %></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td></td>
        <td><%= book.author.name %></td>
        <td></td>
        <td>
          <%= link_to t(".edit"), "#" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate %>

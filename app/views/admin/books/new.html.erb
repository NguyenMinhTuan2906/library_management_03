<% provide :title, t(".create") %>
<h1><%= t ".create" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @book] do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <div class="form-group">
        <%= f.label :name, t(".name") %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :author %>
        <%= f.select(:author_id,
          options_for_select(@author),
          class: "form-control") %>
      </div>

      <div class="form-group">
        <%= f.label :publisher %>
        <%= f.select(:publisher_id,
          options_for_select(@publisher),
          class: "form-control") %>
      </div>

      <div class="form-group">
        <%= f.label :category %>
        <%= f.select(:category_id,
          options_for_select(@category),
          class: "form-control") %>
      </div>

      <div class="form-group">
        <%= f.label :paperback, t(".paperback") %>
        <%= f.text_field :paperback, class: "form-control" %>
      </div>

      <%= f.submit t(".create"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

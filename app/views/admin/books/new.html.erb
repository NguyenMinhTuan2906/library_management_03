<% provide :title, t(".create") %>
<h1 class="text-center"><%= t ".create" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @book] do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <div class="form-group">
        <%= f.label :name, t(".name") %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :author %>
        <%= f.select :author_id, @author, {}, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :publisher %>
        <%= f.select :publisher_id, @publisher, {}, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :category %>
        <%= f.select :category_id, @category, {}, class: "form-control" %>
      </div>

      <span class="picture">
        <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png" %>
      </span>

      <div class="form-group">
        <%= f.label :paperback, t(".paperback") %>
        <%= f.text_field :paperback, class: "form-control" %>
      </div>

      <%= f.submit t(".create"), class: "btn btn-primary form-control" %>
    <% end %>
  </div>
</div>

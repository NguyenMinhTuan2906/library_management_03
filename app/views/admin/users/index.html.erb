<% provide :title, t(".alluser") %>
<% provide :placeholder, t(".search_user") %>

<h1><%= t ".alluser" %></h1>
<%= form_for users_path, method: :get do %>
  <%= render "shared/search_form" %>
<% end %>

<%= will_paginate %>

<ul class="users">
  <% if @users.any? %>
    <% @users.each do |user| %>
      <li>
        <%= gravatar_for user, size: Settings.gravatar_user.size %>
        <%= link_to user.name, user %>
        (<%= user.email %>)
        <% if current_user.is_admin && !current_user?(user) %>
          | <%= link_to t(".delete"), admin_user_path(user), method: :delete,
            data: {confirm: t(".confirm")} %>
        <% end %>
      </li>
    <% end %>
  <% else %>
    <div class="alert alert-warning">
      <%= t ".not_found" %>
    </div>
  <% end %>
</ul>

<%= will_paginate %>

<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
    <%= render "follow_form" if logged_in? %>
  </aside>
</div>
<div class="list-book">
  <%= render "list_book" %>
</div>

<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to t("profile"), @user %></span>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </aside>
  <div class="users col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <% @users.each do |user|%>
        <li>
          <%= gravatar_for user, size: Settings.gravatar_user.size %>
          <%= link_to user.name, user %>
        </li>
      <% end %>
      <%= will_paginate %>
    <% end %>
  </div>
</div>
